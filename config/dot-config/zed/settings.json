// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    // ── APPEARANCE ──────────────────────────────────────────────────
    "agent_servers": {
        "opencode": {
            "type": "registry",
        },
        "github-copilot": {
            "type": "registry",
        },
    },
    "theme": {
        "mode": "dark",
        "light": "Gruvbox Light",
        "dark": "Gruvbox Dark",
    },
    "buffer_font_family": "JetBrains Mono",
    "buffer_font_size": 13.0,
    "colorize_brackets": true,
    "lsp_document_colors": "inlay",
    // colored indent guides!
    "indent_guides": {
        "line_width": 2,
        "active_line_width": 3,
        "coloring": "indent_aware",
    },

    // ── EDITOR BEHAVIOR ─────────────────────────────────────────────
    "vim_mode": true,
    "vim": {
        "toggle_relative_line_numbers": true,
        "use_system_clipboard": "on_yank",
    },
    "relative_line_numbers": "enabled",
    "tab_size": 4,
    "wrap_guides": [120],
    "sticky_scroll": {
        "enabled": true,
    },
    // use lsp symbols over tree-sitter when available
    "document_symbols": "on",
    // show help for symbol's signature after starting to write
    "show_signature_help_after_edits": true,
    "auto_signature_help": false,
    "inlay_hints": {
        // Global switch to toggle hints on and off, switched off by default.
        "enabled": true,
        // Toggle certain types of hints on and off, all switched on by default.
        "show_type_hints": true,
        "show_parameter_hints": true,
        // Corresponds to null/None LSP hint type value.
        "show_other_hints": true,
    },
    "diagnostics": {
        // Whether to show warnings or not by default.
        "include_warnings": true,
        // Settings for inline diagnostics
        "inline": {
            // Whether to show diagnostics inline or not
            "enabled": true,
        },
    },

    // ── PANELS & LAYOUT ─────────────────────────────────────────────
    "use_system_window_tabs": true,
    "project_panel": {
        "default_width": 350.0,
    },
    "git_panel": {
        "tree_view": true,
        "status_style": "icon",
        "default_width": 400.0,
    },
    "outline_panel": {
        "dock": "right",
    },
    "collaboration_panel": {
        "button": false,
        "dock": "right",
    },
    // make fuzzy file finder wider
    "file_finder": {
        "modal_max_width": "medium",
    },
    "which_key": {
        "enabled": true,
    },
    "resize_all_panels_in_dock": [],

    // ── GIT ─────────────────────────────────────────────────────────
    "git": {
        "inline_blame": {
            "show_commit_summary": true,
        },
    },

    // ── TERMINAL ────────────────────────────────────────────────────
    "terminal": {
        "font_family": "JetBrainsMono Nerd Font",
        "shell": "system",
        "detect_venv": {
            "on": {
                "activate_script": "default",
            },
        },
    },

    // ── AI & PREDICTIONS ────────────────────────────────────────────
    "agent": {
        "default_profile": "ask",
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "gpt-5.3",
        },
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-sonnet-4",
        },
    },
    "show_edit_predictions": true,
    "edit_predictions": {
        "mode": "subtle",
        "provider": "copilot",
    },

    // ── LANGUAGE-SPECIFIC SETTINGS ──────────────────────────────────
    "languages": {
        "YAML": {
            // "format_on_save": "off",
            "tab_size": 2,
        },
        "Python": {
            "language_servers": ["ty", "!basedpyright", "ruff"],
            "format_on_save": "on",
            "formatter": [
                {
                    "external": {
                        "command": "black",
                        "arguments": ["-"],
                    },
                },
                {
                    "external": {
                        "command": "isort",
                        "arguments": ["-"],
                    },
                },
            ],
        },
        "JavaScript": {
            "formatter": "prettier",
        },
        "TypeScript": {
            "formatter": "prettier",
        },
    },

    // ── LSP-SPECIFIC SETTINGS ───────────────────────────────────────
    "lsp": {
        "basedpyright": {
            "settings": {
                "basedpyright.analysis": {
                    "diagnosticMode": "workspace",
                    "typeCheckingMode": "standard",
                },
                "python": {
                    "pythonPath": ".venv/bin/python",
                },
            },
        },
        "ty": {
            "settings": {
                "diagnosticMode": "workspace",
            },
        },
        "ruff": {
            "initialization_options": {
                "settings": {
                    // Ruff server settings goes here
                    "lineLength": 120,
                    "lint": {
                        "ignore": ["I"], // using isort with specific rules for now
                    },
                },
            },
        },
    },
}
